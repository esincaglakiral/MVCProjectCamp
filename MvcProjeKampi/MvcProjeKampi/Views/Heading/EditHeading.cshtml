@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Başlık Güncelleme Sayfası</h3>
<br />

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))  //fonk. adı, controller adı
{
<div class="form-group">

    @Html.HiddenFor(x => x.HeadingID, new { @class = "form-control" })
    @Html.HiddenFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID)
    <br />
    @Html.Label("Yazar")
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterID)
    <br /><br />
    <button class="btn btn-success">Başlığı Güncelle</button>
</div>
}

